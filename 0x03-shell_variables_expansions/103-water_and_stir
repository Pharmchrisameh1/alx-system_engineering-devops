#!/bin/bash
# Script to add two numbers in custom bases and print the result in another custom base

# Convert WATER from base 'water' to decimal
water_to_dec() {
  echo $1 | tr 'water' '01234'
}

# Convert STIR from base 'stir' to decimal
stir_to_dec() {
  echo $1 | tr 'stir' '01234'
}

# Convert decimal to base 'bestchol'
dec_to_bestchol() {
  echo $1 | tr '0123456789' 'bestchol'
}

# Convert the WATER and STIR variables to decimal
dec_water=$(water_to_dec $WATER)
dec_stir=$(stir_to_dec $STIR)

# Add the two decimal values
sum=$((dec_water + dec_stir))

# Convert the sum to base 'bestchol'
result=$(dec_to_bestchol $sum)

# Print the result
echo $result

